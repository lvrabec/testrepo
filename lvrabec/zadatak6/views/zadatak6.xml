<odoo>
  <data>

      <record id="hr_employee_oib" model="ir.ui.view">
      <field name="name">hr_employee_oib</field>
      <field name="model">hr.employee</field>
      <field name="inherit_id" ref="hr.view_employee_form"/>
      <field name="arch" type="xml">

      <xpath expr="//field[@name='study_school']" position="after"> 

        <group name="oib" string="Osobni identifikacijski broj">
          <field name="oib"/> 
        </group>

      </xpath>
        
      </field>
    </record>
    
  </data>
</odoo>